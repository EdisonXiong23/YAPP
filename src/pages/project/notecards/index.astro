</ProjectLayout>

<style>
    #Page {
        position: absolute;
        right: 0;
        margin-top: 1rem;
        width: calc(100vw - 1rem - 12vw);
        max-width: calc(100vw - 1rem - 12vw);
        text-align: center;
        align-items: center;
    }

    .filter-bar {
        width: 90%;
        margin: 2rem auto;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .filter-bar input[type="text"] {
        width: 70%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }

    .filter-bar button {
        padding: 0.5rem 1rem;
        border: none;
        background-color: var(--color-primary-200);
        color: white;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

    .filter-bar button:hover {
        background-color: var(--color-primary-300);
    }

    .notecards {
      width: 90%;
      margin: 2rem auto;
      border-collapse: collapse;
      table-layout: fixed;
    }

    td {
      padding: 1rem;
      vertical-align: top;
    }
</style>
