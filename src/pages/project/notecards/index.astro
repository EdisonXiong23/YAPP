---

<ProjectLayout title="Notecards">
  <div id="Page">
    <div class="filter-bar">
      <input type="text" placeholder="Search for a notecard..." />
      <button>Filter</button>
    </div>

    <table class="notecards">
      <tr>
        <td><Card title="Bodhidharma Origins" quote="je ne parle pas français" start_page={5} end_page={5} analysis="Either a monk or silk-road traveller" source={source1} href="Google.com"></Card></td>
        <td><Card title="Fall of the Song Dynasty" quote="je ne parle pas français" start_page={5} end_page={5} analysis="Hangzhou taken by Kublai Khan in 1279. Yuan Dynasty established." source={source1} href="Google.com"></Card></td>
        <td><Card title="Bodhidharma Origins" quote="je ne parle pas français" start_page={5} end_page={5} analysis="Either a monk or silk-road traveller" source={source1} href="Google.com"></Card></td>
